generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  name              String?
  birthDate         DateTime?
  searchFields      Json?
  email             String    @unique
  country           String?
  private_key       String?
  hedera_account_id String?
  experience        String?
  password          String?
  languages         Json?
}

model ArtistProfile {
  id       Int    @id @default(autoincrement())
  audios   Bytes
  messages String
  photos   Bytes
  videos   Bytes
  writing  String
}

model TalentHunter {
  id      Int    @id @default(autoincrement())
  company String
}

model Project {
  id          Int      @id @default(autoincrement())
  starts      DateTime
  title       String
  ends        DateTime
  fundingGoal Decimal
  type        String
  description String
  image       Bytes
}
